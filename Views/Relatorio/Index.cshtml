@{  
    ViewData["Title"] = "Gráfico";  
}  

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.5.0/chart.min.js"></script>  

<h2>Total de Vendas por Produto</h2>  
<hr />  

<div style="max-width: 500px; margin: 0 auto;">  
    <canvas id="myChart"></canvas>  
</div>  

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>  

<script>  
    const ctx = document.getElementById('myChart');  

    new Chart(ctx, {  
        type: 'pie',  
        data: {  
            labels: [@Html.Raw(ViewBag.Labels)],  
            datasets: [{  
                label: 'Total Vendido',  
                backgroundColor: [@Html.Raw(ViewBag.Cores)],  
                data: [@Html.Raw(ViewBag.Valores)],  
                borderWidth: 1  
            }]  
        },  
        options: {  
            scales: {  
                y: {  
                    beginAtZero: true  
                }  
            }  
        }  
    });  
</script>
