@model SistemaVenda.Models.ClienteFormViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />
            <fieldset>
                <label asp-for="Nome" class="form-label mt-3"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </fieldset>
            <fieldset>
                <label asp-for="CNPJ_CPF" class="form-label mt-3"></label>
                <input asp-for="CNPJ_CPF" class="form-control" />
                <span asp-validation-for="CNPJ_CPF" class="text-danger"></span>
            </fieldset>
            <fieldset>
                <label asp-for="Email" class="form-label mt-3"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </fieldset>
            <fieldset>
                <label asp-for="Celular" class="form-label mt-3"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </fieldset>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar Para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
