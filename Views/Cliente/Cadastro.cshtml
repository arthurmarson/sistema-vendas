@model SistemaVenda.Models.ClienteFormViewModel

@{
	ViewData["Title"] = "Cadastro";
}

<h2>Cadastro de Clientes</h2>

<h4>Cliente</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Cadastro">
            <div asp-validation-summary="All" class="text-danger"></div>
            <fieldset>
                <label asp-for="Nome" class="form-label mt-3"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </fieldset>
            <fieldset>
                <label asp-for="CNPJ_CPF" class="form-label mt-3">CNPJ/CPF</label>
                <input asp-for="CNPJ_CPF" class="form-control" />
                <span asp-validation-for="CNPJ_CPF" class="text-danger"></span>
            </fieldset>
            <fieldset>
                <label asp-for="Email" class="form-label mt-3"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </fieldset>
            <fieldset>
                <label asp-for="Celular" class="form-label mt-3"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </fieldset>
			<fieldset class="form-group">
				<input type="submit" value="Cadastrar" class="btn btn-primary" />
			</fieldset>
		</form>
	</div>
</div>

<div>
    <a asp-action="Index">Voltar Para a Lista</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
