@model SistemaVenda.Entities.Cliente

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar Cliente</h1>

<h3>Tem certeza que deseja deletar esse cliente?</h3>
<br />
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CNPJ_CPF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CNPJ_CPF)
        </dd>
        <dt class = "col-sm-2">
