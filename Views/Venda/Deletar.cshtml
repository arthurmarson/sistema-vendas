@model SistemaVenda.Entities.Venda  

@{  
    ViewData["Title"] = "Deletar Venda";  
}  

<h1>Deletar Venda</h1>  

<h3>Tem certeza que deseja deletar esta venda?</h3>  
<br />  
<div>  
    <hr />  
    <dl class="row">  
        <dt class="col-sm-2">  
            @Html.DisplayNameFor(model => model.Codigo)  
        </dt>  
        <dd class="col-sm-10">  
            @Html.DisplayFor(model => model.Codigo)  
        </dd>  
        <dt class="col-sm-2">  
            @Html.DisplayNameFor(model => model.Data)  
        </dt>  
        <dd class="col-sm-10">  
            @Html.DisplayFor(model => model.Data)  
        </dd>  
        <dt class="col-sm-2">  
            Cliente  
        </dt>  
        <dd class="col-sm-10">  
            @Model.Cliente?.Nome  
        </dd>  
        <dt class="col-sm-2">  
            @Html.DisplayNameFor(model => model.Total)  
        </dt>  
        <dd class="col-sm-10">  
            R$ @Html.DisplayFor(model => model.Total)  
        </dd> 
    </dl>
	<hr />

    <div class="form-control">
        <h4>Detalhes da Venda</h4>
        <table class="table table-striped table-hover col-md-12">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Valor Unitário</th>
                    <th>Quantidade</th>
                    <th>Valor Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model.Produtos)
                {
                    <tr>
                        <td>@produto.CodigoProduto</td>
                        <td>@produto.ValorUnitario.ToString("F2")</td>
                        <td>@produto.Quantidade</td>
                        <td>@produto.ValorTotal.ToString("F2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />

    <form asp-action="Deletar">  
        <input type="hidden" asp-for="Codigo" />  
        <input type="submit" value="Deletar" class="btn btn-danger" /> |  
        <a asp-action="Index">Voltar Para a Lista</a>  
    </form>  
</div>
